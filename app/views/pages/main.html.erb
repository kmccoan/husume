<% @type = @category_types.first %>
<% content_for :header do %>
  <div class="title"><%= I18n.t(:whats_the_) %><%= @type.name %>?</div>
<% end %>

<div class="grid">
	<div class="grid-section group">
		<%  @categories = @type.categories
			@categories.each { |category| 
			if !category.activities.empty?
		%>
			<div class="col span_1_of_3">
				<%=link_to image_tag(category.photoUrl, :class => "photo"), category_activities_url(category) %>
			</div>
		<% 
			end
		  } 
		%>
	</div>
</div>

<% content_for :footer do %>
	<div class="grid">
		<div class="grid-section group">
			<div class="col span_1_of_2">
				<%= link_to_previous_page @category_types, 'Wait.. I like the last set better' %>
			</div>
		   <div class="col span_1_of_2">
			    <%= link_to_next_page @category_types, 'Not sure. Give me another set of choices' %>
			</div>
		<div>
	</div>
<% end %>