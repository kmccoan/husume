<!DOCTYPE html>
<html>
	<head>
	  <title><%= I18n.t(:landing_text) %></title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= yield :head %>
	</head>
	<body>
		<header>
			<%= yield  :header%>
		</header>
		<section id="main-content">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <%= msg %>
        <% end %>
      <% end %>
			<%= yield %>
		</section>
		<footer>
			<%= yield  :footer%>
		</footer>
	</body>
</html>
